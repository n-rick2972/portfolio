{
  "emulators": {
    "dataconnect": {
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    }
  },
  "dataconnect": {
    "source": "dataconnect"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/sitemap.xml",      "function": "sitemap" },

      { "source": "/coeur/**",         "destination": "/coeur/index.html" },
      { "source": "/GuildHarry/**",    "destination": "/GuildHarry/index.html" },
      { "source": "/KoharuDental/**",  "destination": "/KoharuDental/index.html" },
      { "source": "/mocca/**",         "destination": "/mocca/index.html" },
      { "source": "/Wing-create/**",   "destination": "/Wing-create/index.html" },
      { "source": "/yama/**",          "destination": "/yama/index.html" },

      { "source": "**",                "destination": "/index.html" }
    ],
    "cleanUrls": true
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm run build"
      ]
    }
  ]
}

